    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Run Server Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}\\manage.py",
            "console": "integratedTerminal",
            "django": true,
            "justMyCode": false,
            "env": {"PYTHONPATH": "${workspaceRoot}"},
            "cwd": "${workspaceRoot}",
            "args": [
                "runserver",
                "0.0.0.0:8080"
            ]
        }
    ]
}